.legend
	background-color #fff
	margin-top 180px
	&:first-of-type
			margin-bottom 460px
			
	&:last-of-type
			margin-bottom 80px
	.about-legend
		color $light-gold
		padding 40px 0
		&__title
			text-align center
			font-weight 400
			font-size 29px
			width 330px
			word-break break-all
			margin 0 auto
		&__author
			
			text-align center 
			margin 0 auto
			display block
			font-style italic
		&__content
			color $light-gray
			font-size 20px
			padding  20px 0

@media (max-width 1199px)
	.legend
		margin-top 40px
		&:first-of-type
			margin-bottom 120px
		
		&:last-of-type
			margin-bottom 40px
		.about-legend
			&__title
				font-size 24px
				width 270px
			&__content
				padding 0 10px
				text-align justify