.accordion
    height 650px
    margin 162px auto 0
    overflow hidden
    ul
        width 2300px
        &:hover
            li
                width calc(100% / 30)
        li
            &:hover
                width 640px
        li
            position relative
            display block
            width calc(100% / 22)
            float left
            border-left 1px solid #888
            box-shadow 0 0 25px 10px rgba(0, 0, 0, 0.5)
            -webkit-box-shadow 0 0 25px 10px rgba(0, 0, 0, 0.5)
            -moz-box-shadow 0 0 25px 10px rgba(0, 0, 0, 0.5)
            transition all 0.5s linear
            -webkit-transition all 0.5s
            -moz-transition all 0.5s
            transition-delay .4s
            img
                display block
#lightbox
    .lb-number
        display none !important
            
@media (max-width 1199px)
    .accordion
        margin-top 120px
        ul
            width 1500px
            overflow-x scroll
            li 
                width 80px
@media (max-width 991px)
    .accordion
        margin-top 105px
        
@media (max-width 767px)
    .accordion
        margin-top 110px
 