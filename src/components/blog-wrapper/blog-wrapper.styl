@import '../posts-sidebar/posts-sidebar'

.blog-wrapper
	
	background-color #fff
	margin-top 162px
	padding 40px 40px 0
	
	.main-posts-wrapper
		
		width 760px
		float left
		.post-card
			width 100%
			margin-bottom 40px
			border 1px solid $light-gold
			padding 20px 10px
			&:last-child
				margin-bottom 10px 
			
			&__title
				text-decoration none
				color $light-gold
				font-size 29px
				&:hover
					text-decoration underline
			&__date
				margin-bottom 10px
				
				font-size 16px
			&__info
				height 200px
				&--image
					float left
					padding-right 20px
				&--content
					
					color $light-gray
					font-size 16px
				.action-btn
					width 200px
					display block
					margin 30px 43.5% 0
					
					cursor pointer
		.easyPaginateNav 
			width 200px !important
			margin 20px auto
			text-align center
			a
				padding 5px
				color $light-gray
				text-decoration none
				&.current
					color #000
					font-weight bold 
					text-decoration underline


					
@media (max-width 1199px)
	.blog-wrapper
		margin-top 120px
		.main-posts-wrapper
			width 100%
			.post-card
				&__info
					height auto
					&--image
						max-width 100%
		
						
@media (max-width 991px)
	.blog-wrapper
		margin-top 105px

		
@media (max-width 540px)
	.blog-wrapper
		margin-top 110px
		padding 40px 10px
		.main-posts-wrapper
			
			.post-card
				&__title
					font-size 20px
					text-align center
					display block
				&__date
					text-align center
				&__info
					&--image
						width 100%
						float none
						padding-right 0
					.action-btn
						margin 10px auto 0
					
					
						
				
				
				

