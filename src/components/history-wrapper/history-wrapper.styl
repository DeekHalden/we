.history-wrapper
	margin-top 162px
	padding 40px
	border 15px solid #fff
	background-color rgba(255,255,255,.7)
	
	.title
		font-size 30px
		color $light-gold
	.history-info
		@extend .personal-wrapper .personal-info
		width 100%
		margin-right 0
		border-bottom 1px solid #c5b5b5 
		float left
		border-right 0
		
		&__subtitle
			width 33%
			float left
			padding 0 10px
			.action-btn
				padding 5px 10px
				font-weight bold	
				
@media(max-width 1199px)
	.history-wrapper
		.history-info
			padding-right 0
			
@media(max-width 991px)
	.history-wrapper
		.history-info
			
			&__subtitle
				width 50%
@media(max-width 640px)
	.history-wrapper
		padding 10px
		.history-info
			&__subtitle
				width 100%
