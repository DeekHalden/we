$gold = #B0A171
$light-gold = #94821b
$light-gray = #4d4b4b
$dark-gray = #3B3626
$lighter-gray = #756b4b

*
	margin 0
	padding 0
	box-sizing border-box
body
	font-family 'EB Garamond'
	
	background-color transparent
	overflow-x hidden
	
	
	
ul
	list-style none
	
	
.row 
	width 1180px
	height auto
	margin 0 auto
.container-fluid
	width 100%
.clearfix:before,.clearfix:after 
	content ""
	display table
	width 0
	height 0
	visibility hidden
.clearfix:after 
	clear both
.img-responsive 
	display block
	width 100%
	height 100%
.parallax-container

	width 100%
	
	top 0
	position absolute
	z-index -1
	background-position center 95%
	margin-top -550px
	
.collections-btn
		height 48px
		
		padding  0px 20px
		text-align center
		margin 0 auto
		border 1px solid $gold
		text-decoration none
		color $gold
		font-family 'Marck Script', cursive
		font-weight 700
		font-size 29px
		transition  .4s ease all
		box-shadow -0.29px 0.96px 4px 0px rgba(0, 0, 0, 0.6)
		
	.collections-btn:hover
			background-color $gold
			color #fff	
.action-btn
	margin-top 25px
	display block
	color #fff
	background-color $gold
	text-decoration none
	text-align center
	height 36px
	line-height 36px
	font-size 20px
	transition .2s ease all
	&:hover
		background-color rgba(176,161,113,.8)
		font-size 20px

.cloths-main-container
	background-image none
	background-color #fff
	z-index 5
 	
@media (max-width 1199px)
	.parallax-container
		background url(../images/bg_cloth.webp)	repeat-y center center
	.row 
		width 970px
	
		
@media (max-width 991px)
	.row 
		width 750px

@media (max-width 767px)
	.row	 
		width 100%
		margin 0 auto
		

