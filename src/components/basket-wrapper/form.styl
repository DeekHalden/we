.user	
	.order-form 
		display flex
		flex-wrap wrap
		justify-content space-around
		@extends .form-wrapper .row .login-form
		.info-row, .destination-row, .note-row
			display inline
			width calc(100%  / 3 - 2.5%)
			float left
			margin-right 3.75%
			.heading
				color $gold
				font-size 24px
				margin-bottom 10px
				margin-top 17px
		
		.note-row
			margin-right 0
			.heading 
				margin-top 34px
			.headings-row
				display flex
				justify-content space-around
				flex-wrap wrap
				&__heading
					@extend .heading
					color $gold
					text-align center
					float left
					font-size 20px
					input:focus
						outline none
					
			textarea
				
				
				resize none
				height 115px
				overflow hidden
				border 2px solid #000
				
	.action-btn
		display inline-block
		float right
		width auto
		padding-left 10px
		padding-right 10px
			
@media(max-width 1199px)
	
		.user
			.order-form
				justify-content flex-start
				.info-row, .destination-row, .note-row
					width 47.5%
					margin-right 0
				.info-row
					margin-right 5%	
					
@media(max-width 799px)
	.user
		.order-form
			.note-row
				.headings-row
					&__heading
						margin-top 10px

				
@media(max-width 640px)
	
		.user
			.order-form
				justify-content flex-start
				.info-row, .destination-row, .note-row
					width 100%
					margin-right 0

