
.select
	width 250px
	display block
	
	position relative
	height 40px
	
	border 1px solid #212020
	padding 5px 20px
	z-index 5
	background-color #fff
	margin-left auto
	margin-right 10px
	
	&:hover 
		cursor pointer
	.icon-down-angle
		position absolute
		right 10px
		font-size 20px
		&:before 
			content "\e900"
	#current_menu
		width 250px
		position absolute
		z-index 5
		background-color #fff
		margin-left -21px
		margin-top 5px
		border 1px solid #212020
		border-top 0
	.select-wrapper
		margin-top 5px
		z-index 5
		padding 0 20px
		&__item
			padding 10px 0
			&:hover 
				opacity .7
			&--checked
				position absolute
				right 10px
	#current_page
		margin-top 3px

.cards-wrapper
	padding 20px 0
	display flex
	flex-wrap wrap
	justify-content space-between
	position relative
	

	.card-wrapper
		float left
		width 311px
		height 311px
		text-decoration none
		margin 1%  auto
		position relative
		transition .2s ease all
		&__image-wrapper
			width 100%
			height 300px
			display block
			line-height 240px
			overflow hidden
			&--image
				max-width 100%
				
				transition .2s ease all
				vertical-align middle
				display inline-block
		.label
			position absolute
			color #fff
			padding 5px 20px
			text-transform capitalize
			font-size 16px
			font-weight 300
			top 0
			left 0
		&__hot
			background-color #DEC328
		&__discount
			background-color red
			
		&__button
			position absolute
			bottom 0px
			left 0
			right 0
			text-align center
			margin 0 auto
			transition .2s ease all
			z-index -1
			
			color $light-gold
			&:hover
				color #5a521f
		&__title
			color #646464
			
	.card-wrapper
		&:hover
			> .card-wrapper__image-wrapper
				overflow hidden
				.card-wrapper__image-wrapper--image
					transform scale(1.2)
			> .card-wrapper__button
				margin 30px 0 20px
				padding 10px 0 
				z-index 1
				background-color #fff
				
@media(max-width 1199px)
	.cards-wrapper
		padding-top 30px
		
			
