.partnership-wrapper
	margin-top 162px
	margin-bottom 50px
	.main-content, .add-content
		
		background-color rgba(255,255,255,.7)
		border 20px solid #fff
		margin-bottom 50px
		padding 30px 0 50px
		.heading,.subheading
			text-align center
			margin-bottom 20px
		.heading
			color $light-gold
			font-size 24px
		.subheading
			color $gold
			font-size 20px
			font-style italic
		.content
			text-align center
			width 70%
			margin 0 auto
			font-size 18px
	.partnership-form
		max-width 800px
		margin-left auto
		margin-right auto
		margin-bottom -40px
		top -91px
		
@media (max-width 640px)
	.partnership-wrapper
		.main-content
			padding-bottom 80px
		.partnership-form
			top -140px
			width 95%
			padding-left  0
			padding-right  0
			.action-btn
				font-size 16px
			