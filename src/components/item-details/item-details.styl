.item
	margin-top 250px
	.item-details
		display flex
		justify-content space-around
		flex-wrap wrap
		.gallery-wrapper
			width 50%
			margin-left 3%
			float left
			.lSSlideOuter
				max-width 85%
				
			.gallery
				position relative
				height 800px
				width 100%
				figure
					max-width 100%
			.short-about
				&__paragraph
					padding-top 5px 
		.description
			float left
			width 40%
			
			&__title
				color #212020
				font-size 26px
				font-weight 200
			&__article
				font-family arial, helvetica, sans-serif
				font-size 11px
				font-weight 300
				color $light-gray
				opacity .75
				padding-bottom 30px
			&__price
				font-family arial, helvetica, sans-serif
				font-weight 500
				margin-bottom 40px
			.old-price
				opacity .5
				text-decoration line-through
			.price
				font-size 18px
				color #212020
			&__form-control
				position relative
				&--feedback-label
					width 100%
					display block
					margin-bottom 5px
				&--feedback
					width 100%
					height 44px
					resize none
					font-size 18px
					padding 10px 40px 10px 5px
					&:hover 
						border 1px solid #000
				&--chars_remaining
					display block
					position absolute
					right 20px
					top 37px
			.select
				margin 30px 0 40px
				position relative
				width 20%
				#current_page, #current_menu
					
					outline none
					border 1px solid rgb(169, 169, 169)
					padding 10px
					
				#current_page
					
					margin-top 10px
					.down-arrowhead
						position absolute
						right 20px
				#current_menu
					position absolute
					border-top none
					z-index 5
					background-color #fff
					width 100%
					.select-wrapper
						&__item
							cursor pointer
							a
								display block
			.action-btn
				
				width 400px
				margin 20px 0
				text-transform uppercase
				font-size 14px
				padding 15px 90px
				display inline
				
			&__item-description
				padding 30px 0 30px
				border-bottom 1px solid #C7C5C5
				&--title
					color #214040
					padding-bottom 10px
				&--content
					font-size 18px
					line-height 22px
					
			&__delivery
				padding-top 10px
				&--content
					font-size 18px
					padding 10px 0
				.action-btn 
					float right 
					width auto
					padding 0 40px
					margin 0
				
@media (max-width 1199px)
	.item
		margin-top 150px
		.item-details
			.lSSlideOuter, .description
				margin 0
			.lSSlideOuter
				max-width 70%
				height auto
				margin 0 auto
				.gallery
					height 100%
					&__item
						width 100%
						height 100%
						&--image
							height auto
							max-width 100%
			.description
				> .action-btn
					width auto
					padding 0	
					display block
@media (max-width 800px)
	.item
		.item-details
			.gallery-wrapper, .description
				width 95%
				margin 0 auto
			.gallery-wrapper
				padding-bottom 40px
				
				