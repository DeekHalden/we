.partnership-wrapper
	@extends .subscribe-wrapper
	margin-bottom -140px
	width 100%
	border none
	background-color transparent
	position relative
	top -160px
	&__heading
		text-transform uppercase
		text-align center
	.form-control
		width 100%
		height 36px
		padding 15px 5px 10px
		background-color #fff
		border 1px solid rgba(176, 161, 113, 1)
		
		margin-top 10px
		&::-webkit-input-placeholder 
			color lightgray;
			font-size 20px
			
		// & .form-requisites
		// 	height 60px
	.action-btn
		display inline-block
		padding 0 10px
		// float right
		position absolute
		right 0
		bottom -55px
		

@media(max-width 741px)
	.partnership-wrapper
		top -190px
		margin-bottom -175px
	
@media(max-width 480px )
	.partnership-wrapper
		top -185px
		margin-bottom -175px
		.form-control
			&::-webkit-input-placeholder 
				color gray
				font-size 16px
				
			
		.action-btn
			display block
			padding 0 
			// float right
			position relative
			bottom 0
			font-size 16px
		&__form
			&--error
				
				bottom -50px
				position absolute
				text-align center
			
		