.discounts-page
    position fixed
    top 0
    left 0
    
    width 100%
    height 100%
    transform scale(1.12)
    z-index -1
    background url(../images/bg_cloth.webp) repeat-y center center
    background-size cover
    transition 1s opacity
    
.discounts-wrapper
	padding 50px 0 65px
	margin-top 165px
	background-color #fff
	h2
		
		margin-bottom 35px
		text-align center
		color $lighter-gray
		font-size 32px
		font-weight 300

	.cards-row
		margin 0 auto
		display flex
		flex-wrap wrap
		justify-content space-around
		
		&__image-container
			width 320px
			margin 2% 1%
			height 400px
			
			display inline-block
			position relative
			overflow hidden
			border 17px solid rgb(148, 130, 27)
			&:hover .cards-row__image-container--text-content
				background-color transparent
			&:hover .cards-row__image-container--text-content--content
				color #fff
			&--text-content
				z-index 1
				vertical-align middle
				position absolute
				background-color white
				height 100%
				transition  .2s ease all
				color #204040
				padding 30px 5px
				font-family raleway,sans-serif
				&--title
					font-weight 400
					font-size 20px
					color $light-gold
					text-align center
				&--content
					height 300px
					transition  .2s ease all
					font-size 24px
					overflow hidden
					text-align center
					font-weight 500
					color #2F2E2E
					line-height 30px
					
				

			&--image
				height 100%
				width auto
				position absolute 
				left 0
				right 0
				z-index 0
				
.detailed-description
	background-color #fff
	margin 100px 0
	padding 70px 0 50px
	.discounts-legend
		&__title
			@extends .discounts-wrapper h2
			text-align center
			width 60%
			margin 0 auto
			padding-bottom 20px
		&__divider
			border-bottom 4px solid $light-gold
			width 25%
			margin 0 auto 20px
							
		&__content
			text-align center
			color $light-gray
			font-size 20px
			&:last-child
				padding-bottom 40px
				
@media (max-width 1199px)
	.discounts-wrapper
		margin-top 120px
	.detailed-description
		.discounts-legend
			&__title
				width 80%
				font-size 22px
				
@media (max-width 991px)
	.discounts-wrapper
		margin-top 110px

@media (max-width 400px)
	.discounts-wrapper
		.cards-row
			&__image-container
				height 450px
				&--text-content
					padding 15px 5px
	.detailed-description
		.discounts-legend
			padding 0 15px
			text-align left
			&__title
				width 90%
			
				