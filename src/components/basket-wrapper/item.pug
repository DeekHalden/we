-var data = {title:'ОФОРМЛЕНИЕ ЗАКАЗА', image:'/assets/images/item.jpg', title:'Аббай', article:'Артикул: P00504TU' , price:'7.215руб.', quantity: 1 , total:'7.215руб.'}
-var i = 0

.title 
	p #{data.title}
	.cards-row
		while i < 3
			+b.card.clearfix
				+e.image-container
					+e.IMG(src= data.image).image-container--image
				+e.title #{data.title} <br><span class="card__sub">#{data.article}
				
				+e.title Стоимость <br><span class="card__sub">#{data.price}</span>

				+e.title Количество  <br><span class="card__sub">#{data.quantity}</span>
				+e.title Сумма <br><span class="card__sub">#{data.total}</span>
			-i++

	+b.total
		+e.price