.partnership-form
	@extends .subscribe-wrapper
	margin-bottom -140px
	width 100%
	border none
	background-color transparent
	position relative
	top -160px
	&__heading
		text-transform uppercase
		text-align center
	&__form
		&--form-control
			width 100%
			height 36px
			
			background-color #fff
			border 1px solid rgba(176, 161, 113, 1)
			
			margin-top 10px
			&::-webkit-input-placeholder 
				color lightgray;
				font-size 20px
		.error
			color red
			font-size 16px
			font-weight 600
	.action-btn
		display inline-block
		padding 0 10px
		position absolute
		right 0
		bottom -55px
		

@media(max-width 741px)
	.partnership-form
		top -190px
		margin-bottom -175px
	
@media(max-width 480px )
	.partnership-form
		top -185px
		margin-bottom -175px
		.form-control
			&::-webkit-input-placeholder 
				color gray
				font-size 16px
				
			
		.action-btn
			display block
			padding 0 
			// float right
			position relative
			bottom 0
			font-size 16px
		&__form
			&--error
				
				text-align center
			
		