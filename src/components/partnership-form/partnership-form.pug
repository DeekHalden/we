include /mixins/main_mixins
.row
	+b.partnership-form
		+e.H3.heading Заполните свои реквизиты для заключения договора
		+e.FORM(name="subscribe" action="" method="post" novalidate="novalidate")#partnership-form.form
			+e.INPUT.form--form-control.form--name#name(placeholder="Контактное лицо (ФИО, должность)" type="text" name="name")
			+e.INPUT.form--form-control.form--email#email(placeholder="email для регистрации юр.лица" type="email" 
			name="email")
			+e.INPUT.form--form-control.form--tel#tel(placeholder="Телефон" type="number" name="tel")
			+e.INPUT.form--form-control.form--organization#organization(placeholder="Наименование организации" type="text" 
			name="organization")
			+e.INPUT.form--form-control.form--id_number#id_number(placeholder="ИНН/КПП" type="number" name="id_number" )
			+e.INPUT.form--form-control.form--requisites#requisites(placeholder="Банковские реквизиты" type="text" 
			name="requisites")
			
			+CreateActionButton('Отправить реквизиты для договора', 'action-btn partnership-action', 'submit')
		
