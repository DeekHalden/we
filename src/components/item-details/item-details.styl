.item
	margin-top 250px
	.item-details
		display flex
		justify-content space-around
		flex-wrap wrap
		.gallery-wrapper
			width 50%
			margin-left 3%
			float left
			.lSSlideOuter
				max-width 85%
			.gallery
				position relative
				height 800px
				width 100%
				
			.short-about
				&__paragraph
					padding-top 5px 
		.description
			float left
			width 40%
			
			&__title
				color #212020
				font-size 26px
				font-weight 200
			&__article
				font-family arial, helvetica, sans-serif
				font-size 11px
				font-weight 300
				color $light-gray
				opacity .75
				padding-bottom 30px
			&__price
				font-family arial, helvetica, sans-serif
				font-weight 500
				margin-bottom 40px
			.old-price
				opacity .5
				text-decoration line-through
			.price
				font-size 18px
				color #212020
			&__form-control
				position relative
				&:focus
					outline none
				&--feedback-label
					width 100%
					display block
					margin-bottom 5px
					opacity .5
				&--feedback
					width 100%
					height 44px
					resize none
					font-size 18px
					padding 10px 40px 10px 5px
					&:focus
						outline none
					&:hover 
						border 1px solid #000
				&--chars_remaining
					display block
					position absolute
					right 20px
					top 37px
			&__quantity
				width 100px
				height 40px
				margin 30px 0 40px
				padding 0 5px
				position relative
				border 1px solid rgb(169, 169, 169);
				&:hover
					border-color $light-gray
				&:focus
					outline  none
				
			.action-btn
				
				width 100%
				height 50px
				margin 20px 0
				text-transform uppercase
				font-size 14px
				padding 7px 90px
				display block
				
			&__item-description
				padding 30px 0 30px
				border-bottom 1px solid #C7C5C5
				color #212020
				
				&--title
					color #214040
					padding-bottom 10px
				&--content
					font-size 16px
					line-height 22px
					
			&__delivery
				padding-top 10px
				&--content
					color #214040
					font-size 18px
					padding 10px 0
				.action-btn 
				
					float right 
					width auto
					padding 7px 40px
					margin 0
	.checkout-sidebar
		width 350px
		right -350px
		display block
		position fixed
		top 0
		height 100%
		z-index 999999
		overflow-x hidden
		overflow-y auto
		background rgba(255,255,255, 1)
		color #fff
		font-style italic
		transition .4s ease all
		box-shadow 0 0 5px rgba(0, 0, 0, 0.7)
		border-left 0px solid rgba(47, 46, 46, 1)
		font-style normal
		
		&__title
			height 80px
			line-height 80px
			background-color #000
			text-align center
			font-size 23px
			font-weight lighter
			position relative
			&--toggle
				position absolute
				left 20px
				top 35%
				font-size 30px
				line-height 20px
				height 20px
				transition .5s ease all
				cursor pointer
				
				&.passive
					top 42%
					transform  rotate(180deg)
				
				
		&__item
			padding 40px 0
			margin 0 40px
			font-size 16px
			position relative
			transition .2s ease all
			
			&:hover .checkout-sidebar__item--close
				display block
			&--close
				transition .2s ease all
				display none
				position absolute
				right 0
				top 40px
				border 1px solid #a29b9b
				border-radius 100%
				
				> span
					width 14px
					display block
					font-size 16px
					line-height 16px
					padding-left 2.5px
					margin-top -2px
					opacity 1
					color $dark-gray
				&:hover
					cursor pointer
			&--image
				width 80px
				height 80px
				float left
				
				img
					width 100%
					height 100%
				&:hover
					cursor pointer
			&--title,&--quantity,&--price
				
				width 130px
				float left
				margin-bottom 5px
				margin-left 30px
				color $light-gray
				font-weight 700
				.disabled
					text-decoration  line-through
					color $light-gray
					opacity .5
				.quantity
					text-transform uppercase
					font-weight 500
			&:not(:first-of-type)
				border-top 1px solid #C7C5C5
		&__total
			
			width 100%
			bottom 90px
			padding-left 40px
			padding-bottom 10px
			color $dark-gray
			font-size 25px
			border-bottom 1px solid #C7C5C5
		.action-btn
			width 80%
			margin 20px auto
			left 0
			right 0
			display block
			
			bottom 25px
			font-size 16px
			text-transform uppercase
			
			
					
					
			
				
			
	.checkout-sidebar.open
		transform translateX(-350px)
		background-color #fff
				
@media (max-width 1199px)
	.item
		margin-top 150px
		.item-details
			.lSSlideOuter, .description
				margin 0 auto
			.lSSlideOuter
				max-width 70%
				height auto
				
				.gallery
					height 100%
					&__item
						width 100%
						height 100%
						&--image
							height auto
							max-width 100%
			.description
				> .action-btn
					width auto
					
					display block
@media (max-width 800px)
	.item
		.item-details
			.gallery-wrapper, .description
				width 95%
				margin 0 auto
			.gallery-wrapper
				padding-bottom 40px
				
				