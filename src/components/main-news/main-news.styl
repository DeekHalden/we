.news-wrapper
	background-color white
	padding 50px 60px
	position relative
	
	.news-post 
		text-decoration none
		color $light-gold
		&__media
			height 270px
			display flex
			&--img
				width 100%
				max-height 100%
				
				margin auto auto
				
		&__title
			padding-bottom 12px
			font-size 18px
			height 50px
			overflow hidden
			margin-top 9px
			
		&__date
			padding-bottom 10px
			color $light-gray
			font-size 16px
			font-family "kelly slab",fantasy
	.controls
		display none	
		position absolute 
		bottom 20px
		right 40px
		cursor pointer
		font-size 10px
		
.news-wrapper:hover .controls
	display block

@media (max-width 1199px)
	.news-wrapper
		padding 40px 20px