@import '../socials_bar/socials_bar'

.post-container
	margin-top 162px
	.post-inner-container
		background-color #fff
		padding 40px
		.post-wrapper
			border 1px solid $light-gold
			@extend .blog-wrapper .main-posts-wrapper
			.post
				margin 20px
						
				&__title
					font-size 32px
					font-weight 600
					color $gold
				&__date
					margin-bottom 30px
				&__info
					&--image
						width 100%
						height auto
					&--text
						p
							text-indent 20px
							font-size 18px
							color $light-gray
							margin-top 25px
							&:first-of-type
								text-indent 0
@media (max-width 1199px)
	.post-container
		margin-top 120px
		
@media (max-width 991px)
	.post-container
		margin-top 110px
		
@media (max-width 480px)
	.post-container
		
		.post-inner-container
			padding 10px
			.post-wrapper
				.post
					&__title
						font-size 24px
						text-align center
					&__date
						text-align center
							
	
			