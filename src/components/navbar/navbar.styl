@import '../login/login'

.navbar
	padding  0 0 28px
	position fixed
	top 0
	z-index 999
	background-color rgba(255,255,255,0.6)
	box-shadow 0 0 5px rgba(0, 0, 0, 0.7)
	border-top 0px solid rgba(47, 46, 46, 1)
	border-bottom 0px solid rgba(47, 46, 46, 1)
	a:focus
		outline none
	.login
		text-decoration none
		float right
		cursor pointer
		font-size 18px
		color $light-gray
		&:hover
			color $light-gold
		
	.logo
		float left    	
		padding-top 5px
    	
	.heading
		width 90%
		display block
		margin 10px auto 0
		float left
		font-weight 100
		color $dark-gray
		margin-right 20px
		white-space normal
		text-align center
